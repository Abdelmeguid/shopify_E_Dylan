  document.addEventListener('DOMContentLoaded', function(xxx) {
    const savedMode = localStorage.getItem('mode');
    const savedIcon = localStorage.getItem('icon');
    const body = document.body;
    const icon = document.getElementById('mode-icon');

    if (savedMode) {
      body.classList.add(savedMode);
    } else {
      body.classList.add('day-mode'); // Default to day mode if no mode is saved
      var change = true;
    }

    if (savedIcon) {
      icon.src = savedIcon;
    }

    body.style.display = 'block'; // Make the body visible after setting the mode
  });

  function toggleDayNightMode() {
    const body = document.body;
    const icon = document.getElementById('mode-icon');

    if (body.classList.contains('day-mode')) {
      body.classList.remove('day-mode');
      body.classList.add('night-mode');
      icon.src = "https://cdn.shopify.com/s/files/1/0795/7214/0325/files/sun-icon.png?v=1701720519"; // Day modee icon
      var change = true;
    } else {
      body.classList.remove('night-mode');
      body.classList.add('day-mode');
      icon.src = "https://cdn.shopify.com/s/files/1/0795/7214/0325/files/crescent-icon.png?v=1701720519"; // Night mode icon
      var change = false;
    }

    // Save the current mode and icon source to localStorage
    localStorage.setItem('mode', body.classList.contains('day-mode') ? 'day-mode' : 'night-mode');
    localStorage.setItem('icon', icon.src);
  }
 
</script>
