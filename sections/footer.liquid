</div>

<p>our product: {{ products[settings.product] }}</p>

{% schema %}
    {
        "name": "footer",
        "settings": [
            {
                "type": "text",
                "id": "mobile_menu_title",
                "default": "Menu",
                "label": "Mobile Menu Title"
            },
            {
                "type": "link_list",
                "id": "menu",
                "default": "main-menu",
                "label": "Heading Navigation Menu"
                },
            {
                "type": "text",
                "id": "store_icon_url",
                "default": "https://cdn.shopify.com/s/files/1/0795/7214/0325/files/isk.jpg?v=1703936114",
                "label": "Store Icon URL"
            },
            {
                "type": "product",
                "id": "product",
                "label": "product"
            }
            
        ]
    }
    {% endschema %}