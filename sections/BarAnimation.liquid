<div id="bar1" class="progress-bar"></div>
<div id="bar2" class="progress-bar"></div>

<style>
  .progress-bar {
    width: 0;
    height: 20px;
    background-color: #4CAF50; /* Green color */
    margin-bottom: 10px;
  }
</style>


<script>
function animateProgressBar(barId, duration) {
  var bar = document.getElementById(barId);
  var width = 0;
  var interval = 100; // Adjust as needed

  var animation = setInterval(function () {
    if (width >= 100) {
      clearInterval(animation); // Stops the animation for the current bar

      // Check if there's another bar to animate
      if (barId === "bar1") {
        animateProgressBar("bar2", /* duration for bar2 */);
      } else {
        // Any additional logic or actions after all bars have finished animating
        console.log("Both bars have finished animating!");
        return; // Exit the function/block here
      }
    } else {
      width++;
      bar.style.width = width + "%";
    }
  }, (duration / 100) * interval);
}

// Example usage
animateProgressBar("bar1", /* duration for bar1 */);
</script>

