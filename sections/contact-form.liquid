{% schema %}
    {
        "name": "Contact Form",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "label": "Title"
            }
        ],
    "presets": [
        {
            "name": "Contact Form"
        }
    ]
    }
    {% endschema %}

<script>
    console.log('dayLight value:', dayLight);
</script>
    
    <div class="flex flex-col items-center my-4">
    {% if section.settings.title != blank %}
        <h1 class="text-5xl font-medium my-8 md:my-16">{{ section.settings.title }}</h1>
    {% endif %}
    
    {% form 'contact' %}

        {% if form.errors %}
            <div class="border p-5">
                <div class="flex flex-row items-center w-full my-3">
                    <div class="text-red-500">
                        {% render 'icon-failed' %}
                    </div>
                    <div class="text-sm font-medium ml-3">
                        Oh no! Your message is not sent
                    </div>
                </div>
                <ul class="px-4 mb-3 ml-7 list-decimal">
                    {% for error in form.errors %}
                        <li>
                            <span>{{ form.errors.messages[error] }}</span>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% elsif form.posted_successfully? %}
            <div class="flex flex-row items-center w-full my-3 p-5">
                <div class="text-green-500">
                    {% render 'icon-success' %}
                </div>
                <div class="text-sm font-medium ml-3">Your message is sent successfully</div>
            </div>
        {% endif %}

        <div class="max-w-6xl mx-auto justify-center flex-1 items-center px-4">
            <div class="flex px-1 mb-3">
                <div class="px-3 md:w-1/2 animate__animated animate__backInLeft animate__delay-1s">
                    <label class="uppercase text-xs N-BlueHoverYellowD-GrayHoverBlack font-medium" for="contact_name">Name</label>
                    <input class="border-2 border-black py-2 px-2 mb-2 text-gray-700 w-full" type="text" name="contact[name]" id="contact_name">
                </div>
                <div class="px-3 md:w-1/2 animate__animated animate__backInRight animate__delay-1s">
                    <label class="uppercase text-xs  N-BlueHoverYellowD-GrayHoverBlack  font-medium" for="contact_email">Email address</label>
                    <input class="border-2 border-black py-2 px-2 text-gray-700 w-full" type="email" name="contact[email]" id="contact_email">
                </div>
            </div>

            <div class="flex px-1 mb-3  animate__animated animate__backInUp animate__delay-2s">
                <div class="w-full px-3">
                    <label class="uppercase text-xs N-BlueHoverYellowD-GrayHoverBlack font-medium " for="contact_message">Message</label>
                    <textarea class=" border-2  border-black py-3 px-4 mb-3 text-gray-700 w-full" name="contact[body]" id="contact_message"></textarea>
                </div>
            </div>

            <div class="flex px-1 mb-3 mx-auto  animate__animated animate__backInUp animate__delay-2s">
                <div class="w-full px-3 mx-auto">
                    <input type="submit" class="mx-auto block border-2 rounded-xl  border-black w-6\/12  cursor-pointer px-4 py-2  text-base font-medium bg-black N-BlueHoverYellowD-GrayHoverBlack hover:bg-green-500" value="Submit message">
                </div>
            </div>
        </div>        
    {% endform %}
</div>

