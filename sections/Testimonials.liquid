{% schema %}
    {
      "name": "Testimonials",
      "settings": [],
      "blocks": [],
      "presets": [
        {
          "name": "Testimonials",
          "category": "Homepage"
        }
      ]
    }
    {% endschema %}
    
    <style>
      /* Add this CSS to your theme's stylesheet or customize accordingly */
    
      .testimonials-section {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
      }
    
      .testimonial {
        width: 100%;
        max-width: 300px; /* Adjust the maximum width based on your design */
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ccc;
        box-sizing: border-box;
      }
    
      .testimonial img {
        max-width: 100%;
        height: auto;
      }
    
      @media screen and (min-width: 768px) {
        /* Adjust styles for larger screens if needed */
        .testimonial {
          width: calc(50% - 20px);
        }
      }
    </style>
    
    <div class="testimonials-section">
      {%- assign testimonials = '{
        "testimonials": [
          {
            "name": "Client 1",
            "photo": "url_to_photo_1.jpg",
            "review": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. ..."
          },
          {
            "name": "Client 2",
            "photo": "url_to_photo_2.jpg",
            "review": "Another client review goes here..."
          },
          {
            "name": "Client 3",
            "photo": "url_to_photo_3.jpg",
            "review": "Client 3's review would be placed here."
          },
          {
            "name": "Client 4",
            "photo": "url_to_photo_4.jpg",
            "review": "Client 4 has a unique review to share."
          },
          {
            "name": "Client 5",
            "photo": "url_to_photo_5.jpg",
            "review": "Fifth client's review can be inserted here."
          }
        ]
      }' | json -%}
    
      {%- for testimonial in testimonials.testimonials -%}
        <div class="testimonial">
          <img src="{{ testimonial.photo }}" alt="{{ testimonial.name }} Photo">
          <p>{{ testimonial.review }}</p>
          <p>- {{ testimonial.name }}</p>
        </div>
      {%- endfor -%}
    </div>
    